<script type="text/javascript">
    var totals = [<%= (@networks.keep_if {|x| x.parent.nil? }).collect {|y| y.num_ip}.join ", " -%>],
        assigned = [<%= (@networks.keep_if {|x| x.parent.nil? }).collect {|y| y.num_ip_assigned}.join ", " -%>],
        free = [<%= (@networks.keep_if {|x| x.parent.nil? }).collect {|y| y.num_ip_free}.join ", " -%>],
        labels = <%= (@networks.keep_if {|x| x.parent.nil? }).collect {|y| y.name}.to_json.html_safe-%>,
	ids = [<%= (@networks.keep_if {|x| x.parent.nil? }).collect {|y| y.id}.join ", " -%>];

        $(function () {
          Raphael("TOTALS", 948, 504).pieChart(400, 250, 200, totals, labels, ids, "#fff", "total");
          Raphael("ASSIGNED", 948, 504).pieChart(400, 250, 200, assigned, labels, ids, "#fff", "assigned");
          Raphael("FREE", 948, 504).pieChart(400, 250, 200, free, labels, ids, "#fff", "free");
        });
</script>

