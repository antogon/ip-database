body {
	background-image: url('<%= asset_path("grid.png")  %>');
}

/*content bubbles*/
.content-bg {
	background: #EEEEEE;
	height: 500em;
}

.shadow {
  -moz-box-shadow:    3px 3px 5px 6px #ccc;
  -webkit-box-shadow: 3px 3px 5px 6px #ccc;
  box-shadow:         3px 3px 5px 6px #ccc;
}

.content-blurb {
	background: #EEE;
	padding-top: 1.0em;
	padding-bottom: 1.0em;
	padding-left: 4.0em;
	padding-right: 4.0em;
	-moz-border-radius: 1em 4em 1em 4em;
	border-radius: 1em 4em 1em 4em;
}

.content-header {
	display: inline;
}

/*dataTables styling*/
.dataTable {
	display: block;
	clear: both;
}
.dataTables_length {
	display:inline;
	float:left;
}
.dataTables_filter {
	float:right;
}
.dataTables_info {
	display:inline;
}
.dataTables_paginate {
	display:inline;
	float:right;
}
