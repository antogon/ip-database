body {
	background-image: url('<%= asset_path("bodyBackground.png")  %>');
}

/*content bubbles*/
.bg {
	background: #DEDEDE;
}

.shadow {
  -moz-box-shadow:    3px 3px 5px 6px #ccc;
  -webkit-box-shadow: 3px 3px 5px 6px #ccc;
  box-shadow:         3px 3px 5px 6px #ccc;
}

/* styles for layout */
html,body
{
    height:100%;
}

#wrap
{
  min-height: 100%;  
}

#main
{
  overflow:auto;
  padding-bottom:150px; /* this needs to be bigger than footer height*/
}

.footer 
{
  position: relative;
	margin-top: -150px; /* negative value of footer height */
	height: 170px;
	clear:both;
  padding-top:0px;
  color:#fff;
} 

.purple-grad {
	background: #b25fcb; /* Old browsers */
	background: -moz-linear-gradient(top, #b25fcb 0%, #8f00a8 36%, #c837db 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#b25fcb), color-stop(36%,#8f00a8), color-stop(100%,#c837db)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #b25fcb 0%,#8f00a8 36%,#c837db 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #b25fcb 0%,#8f00a8 36%,#c837db 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, #b25fcb 0%,#8f00a8 36%,#c837db 100%); /* IE10+ */
	background: linear-gradient(to bottom, #b25fcb 0%,#8f00a8 36%,#c837db 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b25fcb', endColorstr='#c837db',GradientType=0 ); /* IE6-9 */
}
.content-blurb {
	background: #EEE;
	padding-top: 1.0em;
	padding-bottom: 1.0em;
	padding-left: 4.0em;
	padding-right: 4.0em;
	-moz-border-radius: 1em 4em 1em 4em;
	border-radius: 1em 4em 1em 4em;
}

.content-header {
	display: inline;
}

/*dataTables styling*/
.dataTable {
	display: block;
	clear: both;
}
.dataTables_length {
	display:inline;
	float:left;
}
.dataTables_filter {
	float:right;
}
.dataTables_info {
	display:inline;
}
.dataTables_paginate {
	display:inline;
	float:right;
}
